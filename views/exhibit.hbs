<!-- index.hbs -->


<table id="exhibit-table">
    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
            <th>delete</th>
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the id, fname, lname, homeworld and age, in order --}}
        {{#each data}}
        <tr data-value={{this.exhibit_name}}>
            <td>{{this.exhibit_name}}</td>
            <td>{{this.attendance}}</td>
            <td>{{this.is_permanent}}</td>
            <td>{{this.theme}}</td>
            <td>{{this.rotation_date}}</td>
            <td>{{this.install_date}}</td>
            <td>{{this.exhibit_past_loc}}</td>
            <td>{{this.exhibit_future_loc}}</td>
            <td><button onclick="deleteExhibit('{{this.exhibit_name}}')">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>
<script src="./js/delete_exhibit.js"></script>

<div class="create-entry-box">
    <!-- /views/index.hbs -->
    <h2>Adding Data using an HTML form</h2>
    <p>To add a new exhibit, please enter their information below and click `Submit`!</p>
    <form id="add-exhibit-form" method="POST" action="/add-exhibit-form">
        <dt>
        <label for="input-exhibit_name">Exhibit Name: </label>
        <input type="text" name="input-exhibit_name" id="input-exhibit_name" required>
        </dt>
        <dt>
        <label for="input-attendance">Attendance: </label>
        <input type="number" name="input-attendance" id="input-attendance" required>
        </dt>
        <dt>
        <label for="input-is_permanent">Is Permanent? (bool): </label>
        <input type="number" name="input-is_permanent" id="input-is_permanent" required>
        </dt>
        <dt>
        <label for="input-theme">Theme: </label>
        <input type="text" name="input-theme" id="input-theme">
        </dt>
        <dt>
        <label for="input-rotation_date">Rotation Date: </label>
        <input type="date" name="input-rotation_date" id="input-rotation_date">
        </dt>
        <dt>
        <label for="input-install_date">Install Date: </label>
        <input type="date" name="input-install_date" id="input-install_date">
        </dt>
        <dt>
        <label for="input-exhibit_past_loc">Exhibit Past Location: </label>
        <input type="text" name="input-exhibit_past_loc" id="input-exhibit_past_loc">
        </dt>
        <dt>
        <label for="input-exhibit_future_loc">Exhibit Future Location: </label>
        <input type="text" name="input-exhibit_future_loc" id="input-exhibit_future_loc">
        </dt>
        <dt>
        <input type="submit">
        </dt>
        
    </form>
    <script src="./js/add_exhibit.js"></script>
</div>
<div class="create-entry-box">
    <h2>Search Using an HTML Form</h2>
    <p>Search by exhibit name using the field below. Partial names are OK too!</p>
    <form id="search-exhibit-html" method='GET' action='/exhibit'>
        <label for="input-exhibit_name">Search by Exhibit Name: </label>
        <input type="text" name="exhibit_name" id="input-exhibit_name-html-search">
        
        <input type="submit">
        <a href='/exhibit'><button>Reset</button></a>
    </form>
</div>

<div class="create-entry-box">
    <h2>Updating An Exhibit's Attendance Form</h2>
    <p>To update a specific exhibit's attendance select its name from the drop-down menu on the left and input the new value</p>
    <form id="update-exhibit-form-ajax">
        <dt>
        <label for="input-exhibit_name">Full name: </label>
        <select name="input-exhibit_name" id="mySelect" required>
            <option value="">Select an Exhibit</option>
            {{#each data}}
            <option value="{{this.exhibit_name}}">{{this.exhibit_name}}</option>
            {{/each}}
        </select>
        </dt>
        <dt>
        <label for="input-attendance_value">Input new attendance value: </label>
        <input type="number" name="attendance" id="input-attendance-update" required>
        </dt>
        <dt>
        <input type="submit">
        </dt>

    </form>

    <script src="./js/update_exhibit.js"></script>
</div>