<table id="employee-table">
    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            <th>Employee ID</th>
			<th>First Name</th>
			<th>Last Name</th>
			<th>Job</th>
			<th>Email</th>
            <th></th>
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the id, fname, lname, homeworld and age, in order --}}
        {{#each data}}
        <tr data-value={{this.id}}>
            <td>{{this.employee_id}}</td>
            <td>{{this.first_name}}</td>
            <td>{{this.last_name}}</td>
            <td>{{this.job}}</td>
            <td>{{this.email}}</td>
            <td><button onclick="deleteEmployee({{this.employee_id}})">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>
<script src="./js/delete_employee.js"></script>
<div class="create-entry-box">
    <!-- /views/index.hbs -->
    <h2>Adding Data using an HTML form</h2>
    <p>To add a new employee, please enter their information below and click `Submit`!</p>
    <form id="add-employee-form" method="POST" action="/add-employee-form">
        <dt>
        <label for="input-first_name">First Name: </label>
        <input type="text" name="input-first_name" id="input-first_name" required>
        </dt><dt>
        <label for="input-last_name">Last Name: </label>
        <input type="text" name="input-last_name" id="input-last_name" required>
        </dt><dt>
        <label for="input-job">Job: </label>
        <input type="text" name="input-job" id="input-job" required>
        </dt><dt>
        <label for="input-email">Email: </label>
        <input type="text" name="input-email" id="input-email">
        </dt><dt>
        <input type="submit">
        </dt>
    </form>
    <script src="./js/add_employee.js"></script>
</div>

<div class="create-entry-box">
    <h2>Search Using an HTML Form</h2>
    <p>Search by last name using the field below. Partial last names are OK too!</p>
    <form id="search-employee-html" method='GET' action='/employee'>
        <label for="input-last_name">Search by Last Name: </label>
        <input type="text" name="last_name" id="input-last_name-html-search">
        
        <input type="submit">
        <a href='/employee'><button>Reset</button></a>
    </form>
</div>
<div class="create-entry-box">
    <h2>Updating An Employee's Job Form</h2>
    <p>To update a specific employee's job select their name from the drop-down menu on the left and their desired job from the drop down menu on the right</p>
    <form name="updateEmployeeForm" form id="update-employee-form-ajax">
        <dt>
        <label for="input-fullname">Full name: </label>
        <select name="input-fullname" id="mySelect">
            <option value="test">Select an Employee</option>
            {{#each data}}
            <option value="{{this.employee_id}}">{{this.first_name}} {{this.last_name}}</option>
            {{/each}}
        </select>
        </dt><dt>
        <label for="input-job">Input new job: </label>
        <input type="text" name="input-name" id="input-job-update" required>
        </dt><dt>
        <input type="submit">
        </dt>
    </form>

    <script src="./js/update_employee.js"></script>
</div>